<div class="container" id="createPost">
  <h1>Create Post</h1>
  
  <form action="/create_post" method="post">
    <h3>Enter Post:</h3>
    <p>Select Your Category</p>
    <select name="category_id">
      <%Category.show_all.each do |cat|%>
      <option value="<%=cat.id%>"><%=cat.name%></option>
      <%end%>
    </select>
    <br />
    <br>Post Title</br>
    <input type="text" name="post[title]">
    <br />
    <br>Post Body</br>
    <input type="text" name="post[body]">
    <br />
    <br>Optional Price</br>
    <input type="integer" name="post[price]">
    <br />
    <br>Enter Your Email</br>
    <input type="text" name="post[email]">
    <br />
    <br><input type="submit" value="POST!" class="button"></br>
  </form>

   <!--  key = SecureRandom.urlsafe_base64 -->
</div>
